<%= @user.name %>, <%= @user.email %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <% if current_user.admin? %>
      <br>
      <%= link_to "Add new admin/developer", signup_path, class: "btn btn-lg btn-primary" %>
      <br>
      <%= link_to "Delete developer", users_path, class: "btn btn-lg btn-primary" %>
      <br>
      <%= link_to "Add projects", new_project_path, class: "btn btn-lg btn-primary" %>
      <br>
      <%= link_to "Delete projects", projects_path, class: "btn btn-lg btn-primary" %>
  <% end %>
</div>